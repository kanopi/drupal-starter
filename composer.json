{
    "name": "kanopi/drupal-starter",
    "description": "Project template for Drupal 9 projects with composer and docksal",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Sean Dietrich <sean@kanopistudios.com>",
            "role": "Developer / Architect"
        },
        {
            "name": "Paul Sheldrake <paul@kanopi.com>",
            "role": "Trouble Maker"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://gitlab.ewdev.ca/yonas.legesse/drupal-recipe-unpack.git"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^1.10",
        "cweagans/composer-patches": "^1.6",
        "drupal/access_unpublished": "^1.5",
        "drupal/address": "^1.12",
        "drupal/admin_toolbar": "^3.0",
        "drupal/allowed_formats": "^3.0",
        "drupal/better_exposed_filters": "^6.0",
        "drupal/block_class": "^2.0",
        "drupal/checklistapi": "^2",
        "drupal/components": "^3.0@beta",
        "drupal/config_filter": "^2.2",
        "drupal/config_split": "^2",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drupal/core-vendor-hardening": "^10.0",
        "drupal/critical_css": "^1.19",
        "drupal/ctools": "^3.7",
        "drupal/diff": "^1.1",
        "drupal/easy_breadcrumb": "^2.0",
        "drupal/editor_advanced_link": "^2.0",
        "drupal/emulsify_twig": "^4.0",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/entityqueue": "^1.7",
        "drupal/environment_indicator": "^4.0",
        "drupal/environment_indicator_ribbon": "^1.0",
        "drupal/facets": "^2.0",
        "drupal/fancy_file_delete": "^2.0",
        "drupal/field_group": "^3.1",
        "drupal/focal_point": "^2.0",
        "drupal/gin": "^3.0@RC",
        "drupal/gin_login": "^2.0",
        "drupal/gin_toolbar": "^1.0@RC",
        "drupal/google_tag": "^2.0",
        "drupal/key": "^1.17",
        "drupal/launch_checklist": "^1.1",
        "drupal/media_library_edit": "^3.0",
        "drupal/menu_link_attributes": "^1.2",
        "drupal/metatag": "^1.15",
        "drupal/mimemail": "^1.0@alpha",
        "drupal/nomarkup": "^1.0",
        "drupal/obfuscate": "2.0.x-dev@dev",
        "drupal/oembed_providers": "^2.1",
        "drupal/pantheon_advanced_page_cache": "^2.0",
        "drupal/paragraphs": "^1.16",
        "drupal/paragraphs_edit": "^2.0",
        "drupal/pathauto": "^1.8",
        "drupal/permissions_filter": "^1.3",
        "drupal/quick_node_clone": "^1.16",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/redirect": "^1.9",
        "drupal/redis": "^1.5",
        "drupal/resource_hints": "1.x-dev",
        "drupal/responsive_tables_filter": "^1.18",
        "drupal/scheduler": "^2.0",
        "drupal/scheduler_content_moderation_integration": "^2.0@beta",
        "drupal/schema_metatag": "^2.2",
        "drupal/search_api": "^1.29",
        "drupal/search_api_autocomplete": "^1.7",
        "drupal/search_api_pantheon": "^8.1",
        "drupal/search_api_solr": "^4.3",
        "drupal/seckit": "^2.0",
        "drupal/sendgrid_integration": "^2.2",
        "drupal/seo_checklist": "^5.2",
        "drupal/seo_starter": "1.x-dev",
        "drupal/simple_sitemap": "^4",
        "drupal/sitemap": "^2.0",
        "drupal/smart_date": "^4.0",
        "drupal/token_or": "^2.1",
        "drupal/twig_tweak": "^3.2",
        "drupal/twig_vardumper": "^3.1",
        "drupal/view_unpublished": "^1.1",
        "drupal/views_bulk_edit": "^2.9",
        "drupal/views_bulk_operations": "^4.1",
        "drupal/views_data_export": "^1.3",
        "drupal/views_infinite_scroll": "^2.0",
        "drupal/viewsreference": "^2.0@beta",
        "drupal/webform": "^6.2@beta",
        "drush/drush": "^11",
        "ewcomposer/unpack": "dev-master",
        "joachim-n/composer-manifest": "^1.0",
        "kanopi/drupal-build-starter": "*",
        "kanopi/gin-admin-experience": "*",
        "kanopi/shrubs": "^0.2.1",
        "oomphinc/composer-installers-extender": "2.0.0",
        "pantheon-systems/drupal-integrations": "^10",
        "rvtraveller/qs-composer-installer": "^1.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/core-dev": "^10.1",
        "drupal/upgrade_status": "^4.0",
        "palantirnet/drupal-rector": "^0.15.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "lint-php": "find web/modules/custom web/themes/custom -not -path '*/node_modules/*' -name '*.php' -exec php -l {} \\;",
        "code-sniff-modules": "vendor/bin/phpcs --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/modules/custom ",
        "code-sniff-themes": "vendor/bin/phpcs --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/themes/custom ",
        "code-sniff": [
            "@code-sniff-modules",
            "@code-sniff-themes"
        ],
        "code-fix-modules": "vendor/bin/phpcbf --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/modules/custom ",
        "code-fix-themes": "vendor/bin/phpcbf --ignore=*/node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md,yml web/themes/custom ",
        "code-fix": [
            "@code-fix-modules",
            "@code-fix-themes",
            "@rector-fix",
            "@lint-php"
        ],
        "phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse --memory-limit=-1 web/modules/custom web/themes/custom"
        ],
        "rector-modules": [
             "Composer\\Config::disableProcessTimeout",
             "vendor/bin/rector process web/modules/custom/ --dry-run"
         ],
        "rector-themes": [
             "Composer\\Config::disableProcessTimeout",
             "vendor/bin/rector process web/themes/custom/ --dry-run"
         ],
        "rector-fix-modules": [
             "Composer\\Config::disableProcessTimeout",
             "vendor/bin/rector process web/modules/custom/"
         ],
        "rector-fix-themes": [
             "Composer\\Config::disableProcessTimeout",
             "vendor/bin/rector process web/themes/custom/"
         ],
        "rector-fix": [
            "@rector-fix-modules",
            "@rector-fix-themes"
        ],
        "code-check": [
            "@phpstan",
            "@rector-modules",
            "@rector-themes",
            "@code-sniff"
        ],
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "build-assets": [
            "composer install --optimize-autoloader --no-dev"
        ],
        "post-autoload-dump": [
            "[ ! -f rector.php ] && cp vendor/palantirnet/drupal-rector/rector.php . || true",
            "vendor/bin/phpcs --config-set installed_paths vendor/drupal/coder/coder_sniffer || true"
        ]
    },
    "extra": {
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "drupal-library",
            "npm-asset",
            "bower-asset",
            "quicksilver-script",
            "cypress-support",
            "drupal-recipe"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "tests/cypress/cypress/support/{$name}": ["type:cypress-support"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"],
            "web/recipes/contrib/{$name}": ["type:drupal-recipe"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/robots.txt": {
                    "append": "assets/custom-robots.txt"
                },
                "[web-root]/sites/default/settings.php": {
                    "append": "assets/pantheon_setting_defaults.inc"
                },
                "[web-root]/sites/development.services.yml": false
            }
        },
        "patches": {
            "drupal/core": {
                "Adds playsinline attribute option to Video Media": "https://www.drupal.org/files/issues/2022-04-11/3046152-28.patch",
                "Drupal Recipes - https://www.drupal.org/project/distributions_recipes": "https://git.drupalcode.org/project/distributions_recipes/-/raw/patch/recipe.patch"

            },
            "drupal/obfuscate": {
                "Link Label in Field Formatter is not working": "https://www.drupal.org/files/issues/2023-06-26/3370295-1.patch"
            },
            "drupal/redirect": {
                "Setting 'Enforce clean and canonical URLs.' breaks CSS aggregation on multilingual Drupal 10.1.x with browser caching enabled": "https://www.drupal.org/files/issues/2023-07-20/3373123_redirect-7.patch"
            },
            "drupal/search_api_autocomplete": {
                "Undefined constant Drupal\\\\search_api_solr\\\\SolrBackendInterface::SEARCH_API_SOLR_SCHEMA_VERSION": "https://www.drupal.org/files/issues/2023-08-22/3382226-3.patch"
            }
        },
        "merge-plugin": {
            "include": [
                "web/modules/contrib/webform/composer.libraries.json"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "phpstan/extension-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-vendor-hardening": true,
            "joachim-n/composer-manifest": true,
            "oomphinc/composer-installers-extender": true,
            "rvtraveller/qs-composer-installer": true,
            "wikimedia/composer-merge-plugin": true,
            "ewcomposer/unpack": true
        }
    }
}
